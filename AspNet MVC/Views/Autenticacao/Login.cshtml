@model Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Login geralmente não usa o Layout padrão (sem menu)
}

<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Cotação.SYS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        body {
            background-color: #121212;
            background-image: radial-gradient(circle at center, #1e2530 0%, #121212 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            background-color: #1e1e1e;
            border: 1px solid #333;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px;
            padding: 2rem;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-icon {
            font-size: 3rem;
            color: #0d6efd; /* Azul Primary */
            margin-bottom: 0.5rem;
        }

        /* Ajuste dos inputs para ficarem bonitos no escuro */
        .form-control, .form-select {
            background-color: #2b3035;
            border: 1px solid #444;
            color: #fff;
        }

        .form-control:focus, .form-select:focus {
            background-color: #2b3035;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            color: #fff;
        }

        .btn-login {
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.9rem;
        }
        
        .footer-text {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-header">
            <div class="logo-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h3 class="fw-bold text-white">Acesso ao Sistema</h3>
            <p class="text-secondary">Entre com suas credenciais</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show py-2" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i> Verifique os dados informados.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Login" method="post">
            
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="nome@exemplo.com" />
                <label asp-for="Email" class="text-secondary">
                    <i class="bi bi-envelope me-1"></i> Email
                </label>
                <span asp-validation-for="Email" class="text-danger small ms-1"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Senha" class="form-control" type="password" placeholder="Senha" />
                <label asp-for="Senha" class="text-secondary">
                    <i class="bi bi-key me-1"></i> Senha
                </label>
                <span asp-validation-for="Senha" class="text-danger small ms-1"></span>
            </div>

            <div class="mb-4">
                <label asp-for="TipoUsuario" class="form-label text-secondary small ms-1">Tipo de Acesso</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-secondary">
                        <i class="bi bi-person-badge"></i>
                    </span>
                    <select asp-for="TipoUsuario" class="form-select">
                        <option value="Admin">Administrador</option>
                        <option value="Fornecedor">Fornecedor Externo</option>
                    </select>
                </div>
                <span asp-validation-for="TipoUsuario" class="text-danger small ms-1"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-login shadow">
                    ENTRAR <i class="bi bi-box-arrow-in-right ms-2"></i>
                </button>
            </div>

        </form>

        <div class="footer-text">
            &copy; 2025 Cotação.SYS <br>
            <span class="text-muted opacity-50">Versão 1.0.0</span>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>