@model IEnumerable<Models.Entidades.Cotacao>

@{
    ViewData["Title"] = "Cotações";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">@ViewData["Title"]</h4>

            <a asp-action="Create" class="btn btn-sm btn-success">
                Nova Cotação
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Descrição</th>
                            <th>Abertura</th>
                            <th>Fechamento</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 align-middle fw-bold">
                                    @item.Descricao
                                </td>
                                <td class="align-middle">
                                    @item.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="align-middle">
                                    @item.DataFechamento.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="align-middle">
                                    @if (item.Status == "Aberta")
                                    {
                                        <span class="badge bg-success">Aberta</span>
                                    }
                                    else if (item.Status == "Processada")
                                    {
                                        <span class="badge bg-info text-dark">Processada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td class="align-middle text-end pe-4">
                                    <a asp-action="Resultado"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-primary">
                                        Ver resultado
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
