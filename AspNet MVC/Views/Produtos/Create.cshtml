@{
    ViewData["Title"] = "Novo Produto";
    ViewData["Action"] = "Create";
}

@model Models.Entidades.Produto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                
                <div class="card-body">
                    <form asp-action="@ViewData["Action"]">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-bold"></label>
                            <input asp-for="Descricao" class="form-control" placeholder="Breve descrição" />
                            <span asp-validation-for="Descricao" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UnidadeMedida" class="form-label fw-bold"></label>
                            <input asp-for="UnidadeMedida" class="form-control" style="max-width: 150px;" placeholder="Ex: UN, KG" />
                            <span asp-validation-for="UnidadeMedida" class="text-danger small"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="javascript:history.back()" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-success px-4">Salvar</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}