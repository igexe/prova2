@model IEnumerable<Models.Entidades.Cotacao>
@using System  <!-- pra usar DateTime.Now -->

@{
    ViewData["Title"] = "Minhas Cotações";
}

<div class="container mt-5">

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["Sucesso"]
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Erro"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">@ViewData["Title"]</h4>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Descrição</th>
                            <th scope="col">Abertura</th>
                            <th scope="col">Fechamento</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var prazoEncerrado = item.DataFechamento < DateTime.Now;
                            var podeResponder = item.Status == "Aberta" && !prazoEncerrado;

                            <tr>
                                <td class="ps-4 align-middle fw-bold">@item.Descricao</td>
                                <td class="align-middle">
                                    @item.DataAbertura.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="align-middle">
                                    @item.DataFechamento.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="align-middle">
                                    @if (item.Status == "Aberta")
                                    {
                                        <span class="badge bg-success">Aberta</span>
                                    }
                                    else if (item.Status == "Processada")
                                    {
                                        <span class="badge bg-info text-dark">Processada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }

                                    @if (prazoEncerrado)
                                    {
                                        <small class="text-muted d-block">Prazo encerrado</small>
                                    }
                                </td>
                                <td class="align-middle text-end pe-4">
                                    @if (podeResponder)
                                    {
                                        <a asp-action="Responder"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-primary">
                                            Responder
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled>
                                            Responder
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
