@model Models.ViewModel.CotacaoRespostaViewModel

@{
    ViewData["Title"] = "Responder Cotação";
}

<h2 class="mb-3">Responder Cotação</h2>

<div class="mb-2">
    <strong>Cotação:</strong> @Model.DescricaoCotacao <br />
    <strong>Data limite:</strong> @Model.DataFechamento.ToString("dd/MM/yyyy")
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Responder" method="post">
            <input type="hidden" asp-for="CotacaoId" />

            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Produto</th>
                        <th>Unidade</th>
                        <th>Quantidade</th>
                        <th style="width: 180px;">Preço Unitário (R$)</th>
                    </tr>
                </thead>
                <tbody>
                @for (int i = 0; i < Model.Itens.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.Itens[i].ProdutoNome
                            <input type="hidden" asp-for="Itens[@i].CotacaoItemId" />
                        </td>
                        <td>@Model.Itens[i].UnidadeMedida</td>
                        <td>@Model.Itens[i].Quantidade</td>
                        <td>
                            <input asp-for="Itens[@i].PrecoUnitario" class="form-control" />
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                <button type="submit" class="btn btn-success">Enviar Proposta</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}